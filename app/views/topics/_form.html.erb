<%= form_for(@topic) do |f| %>

  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <%# バリデーションエラーの件数を表示します。 %>
      <h2><%= @topic.errors.count %>件のエラーがあります。</h2>

      <ul>
      <%# @topic.errorsは@topicをバリデーションした際のエラー情報です。 %>
      <%# full_messagesは複数のエラーメッセージを表します。 %>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :topic %>
  <%= f.text_field :topic, class: 'form-control' %>
  <br>
  <%= f.label :topic_img %>
  <%= f.file_field :topic_img, class: 'form-control' %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "画像一覧に戻る", topics_path %>
